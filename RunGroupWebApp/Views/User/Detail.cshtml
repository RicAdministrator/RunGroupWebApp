@using RunGroupWebApp.ViewModels
@model UserDetailViewModel

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <img class="img-fluid" src="@Model.ProfileImageUrl" alt="" width="550" height="550">
        </div>
        <div class="col-md-4">
            <h3 class="my-3">@Model.UserName</h3>
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <ul class="list-group list-group-flush mt-3">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="text-muted small">Pace</span>
                            <span class="fw-semibold">@Model.Pace</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="text-muted small">Mileage</span>
                            <span class="fw-semibold">@Model.Mileage</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="text-muted small">City</span>
                            <span class="fw-semibold">@Model.City</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="text-muted small">State</span>
                            <span class="fw-semibold">@Model.State</span>
                        </li>
                    </ul>
                    <div class="mt-3">
                        <a asp-action="Index" asp-controller="User" class="btn btn-outline-primary btn-sm">Back to Runners</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>