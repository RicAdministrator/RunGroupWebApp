@{
}

<div class="container">
	<div class="row">
		<div class="col-md-8">
			<img class="img-fluid" src="@Model.Image" alt="" width="550" height="550">
		</div>
		<div class="col-md-4">
			<h3 class="my-3">@Model.Title</h3>
			<div class="card mb-3 shadow-sm">
				<div class="card-body">
					<h5 class="card-title mb-2">About</h5>
					<p class="card-text text-muted">@Model.Description</p>
					<ul class="list-group list-group-flush mt-3">
						<li class="list-group-item d-flex justify-content-between align-items-center">
							<span class="text-muted small">Category</span>
							<span class="fw-semibold">@Model.ClubCategory</span>
						</li>
						<li class="list-group-item d-flex justify-content-between align-items-center">
							<span class="text-muted small">City</span>
							<span class="fw-semibold">@Model.Address.City</span>
						</li>
						<li class="list-group-item d-flex justify-content-between align-items-center">
							<span class="text-muted small">State</span>
							<span class="fw-semibold">@Model.Address.State</span>
						</li>
					</ul>

					@{
						var referrer = Context.Request.Headers["Referer"].ToString();
						var backUrl = "";
						
						if (referrer.Contains("/Dashboard"))
							backUrl = "/Dashboard/Index";						
						else if (referrer.Contains("/Club"))
							backUrl = "/Club/Index";
						else
							backUrl = "/Home/Index";
					}

					<div class="mt-3">
						<a href="@backUrl" class="btn btn-outline-primary btn-sm">Back</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>